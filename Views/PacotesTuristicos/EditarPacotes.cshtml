@using Microsoft.AspNetCore.Http;

@model PacotesTuristicos
@{
    ViewData["Title"] = "Editar Pacotes Turisticos";
}

<form method="POST" asp-action="EditarPacotes">

    <div>
        <h2>Editar Pacote Tur√≠stico</h2>
    </div>

    <input type="hidden" asp-for="Id">
    <input type="hidden" asp-for="Usuario" value=@Context.Session.GetInt32("IdUsuario")>

    <p>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome">

    </p>

    <p>
        <label asp-for="Origem">Origem:</label>
        <input asp-for="Origem">

    </p>
    <p>
