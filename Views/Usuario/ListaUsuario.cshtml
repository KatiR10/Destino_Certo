@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "Lista de Usuarios";
}
<div>
<h2>Lista de Usuários</h2>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Login</th>
            <th>Senha</th>
            <th>Data de Nascimento</th>
            <th>Operações</th>
        </tr>
    </thead>
    @foreach (Usuario u in Model)
    {
        <tr>
            <td>@u.Id</td>
            <td>@u.Nome</td>
            <td>@u.Login</td>
            <td>@u.Senha</td>
            <td>@u.DataNascimento.ToShortDateString()</td>
            <td>
                <a href="/Usuario/RemoverUsuario?Id=@u.Id" onclick="return confirm('Deseja remover?');">Remover</a>
                <a href="/Usuario/EditarUsuario?Id=@u.Id">Alterar</a>
            </td>
        </tr>
    }
    <tbody>


    </tbody>

</table>
<p>
    @ViewBag.Mensagem
</p>